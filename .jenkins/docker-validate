pipeline {
  agent any

  stages {
    stage('Docker Validation') {
      agent {
        docker { image 'hadolint/hadolint:latest-alpine' }
      }
      steps {
        // Execute the Docker validation commands
        sh 'ls -la'
        sh 'hadolint Dockerfile'
      }
    }
  }
  post {
    always {
      // Cleanup
      cleanWs()
    }
  }
}